<!-- there is other attributes like header 
we can use in the XML code
 -->

 <!-- 
  1. 'type="header"':
  2. 'role="header"'
  3. 'class="header"'
  4. 'data-header="true"'
  5. 'isHeader="true"'
  6. 'headerCell="yes"'
  7. 'category="header"'
  8. 'headerType="main"'

  -->


1. type="header"

  xml: <cell type="header">Name</cell>

  css:
  cell[type="header"] {
    background-color: #4eb01d;
    font-weight: bold;
  }
  

2. role="header"

  xml: <cell role="header">Name</cell>

  css:
  cell[role="header"] {
    background-color: #4eb01d;
    font-weight: bold;
  }

3. class="header"

  xml <cell class="header">Name</cell>

  css:
  cell.header {
    background-color: #4eb01d;
    font-weight: bold;
  }


4. data-header="true"

  xml <cell data-header="true">Name</cell>

  css: 
  cell[data-header="true"] {
    background-color: #4eb0ld;
    font-weight: bold;
  }

